<% layout('/layouts/boilerplate') %>

<div class="timer-container">
  <button class="top-btn" id="work">Work</button>
  <button class="top-btn" id="short">Short Break</button>
  <button class="top-btn" id="long">Long Break</button>
  <div id="time-box">
    <div id="time">25:00</div>
    <textarea class="none text-box" id="edit-text" rows="1" cols="12"></textarea>
  </div>
  <button class="bottom-btn" id="start-stop">Start</button>
  <button class="bottom-btn" id="reset">Reset</button>
</div>
<audio id="buzz" src="Buzzer.wav"></audio>

<script src="/scripts/timer.js"></script>
